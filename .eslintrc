{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "brace-style": "error",
        "no-tabs": ["error"],
        "no-console": ["off"],
        "no-var": ["error"],
        "curly": ["error", "all"],
        "object-curly-spacing": ["error", "never"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "quotes": ["error", "single", {"avoidEscape": true}],
        "linebreak-style": ["error", "unix"],
        "strict": ["error", "global"],
        "semi": ["error", "always"],
        "indent": ["error", 4, {"SwitchCase": 1}]
    }
}
